{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "plugins": [
    "markdown",
    "json"
  ],
  "extends": ["standard", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true }]
  }
}
